{% extends "layouts/base.njk" %}

{% block header %}
  {% include "partials/header.njk" %}
{% endblock %}

{% block content %}
  {% set samlingInfo = (samling | getSamling) or { title: samling, icon: 'fas fas-folder' } %}
  {% set estimatedReadingTime = readingTime %}
  {% if not estimatedReadingTime and content %}
    {% set estimatedReadingTime = content | readingTime ~ ' min' %}
  {% endif %}

  <section class="max-w-6xl mx-auto px-4 sm:px-6 py-8 sm:py-12 article-shell">
    <article class="surface-card strong-card post-shell">
      <header class="post-header">
        <p class="post-kicker">
          <span>Artikel</span>
          {% if samling %}
            <span class="post-kicker-dot" aria-hidden="true"></span>
            <span>{{ samlingInfo.title }}</span>
          {% endif %}
        </p>

        <h1 class="post-title">{{ title }}</h1>

        <div class="post-meta">
          <span><i class="far far-calendar"></i> {{ date | formatDate }}</span>
          {% if estimatedReadingTime %}
            <span class="meta-divider" aria-hidden="true"></span>
            <span><i class="far far-clock"></i> {{ estimatedReadingTime }}</span>
          {% endif %}
          {% if samling %}
            <span class="meta-divider" aria-hidden="true"></span>
            <a href="{{ baseUrl }}/samlingar/{{ samling }}/" class="post-meta-link">
              <i class="{{ samlingInfo.icon }}"></i> {{ samlingInfo.title }}
            </a>
          {% endif %}
        </div>

        {% if description %}
          <p class="post-lead">{{ description }}</p>
        {% endif %}
      </header>

      <div class="post-body">
        <div class="post-content">
          {{ content | safe }}
        </div>

        {% if references %}
          <div class="post-references">
            <p class="text-xs uppercase tracking-wide flex items-center gap-2">
              <i class="fas fas-book" aria-hidden="true"></i> Referenser
            </p>
            <ol class="reference-list">
              {% for ref in references %}
                <li>{{ ref }}</li>
              {% endfor %}
            </ol>
          </div>
        {% endif %}
      </div>
    </article>
  </section>
{% endblock %}
