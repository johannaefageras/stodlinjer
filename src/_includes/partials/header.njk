{% set h = header or {} %}
<header class="header-shell">
  <div class="header-inner">
    <div class="header-brand">
      <a class="brand-mark" aria-label="Till startsidan" href="{{ baseUrl }}/">
        <i class="{{ h.icon }}" aria-hidden="true"></i>
      </a>
      <div class="header-text">
        <p
          class="text-xs header-p uppercase tracking-wide"
          style="margin: 0; color: var(--accent)"
        >
          {{ h.label }}
        </p>
        <h1>{{ h.title }}</h1>
        <p>{{ h.subtitle }}</p>
      </div>
    </div>
    <div class="header-actions">
      {% if h.links %}
        {% for link in h.links %}
          <a href="{{ baseUrl }}{{ link.url }}" class="header-link" aria-label="{{ link.aria }}">
            <i class="{{ link.icon }}"></i><span>{{ link.text }}</span>
          </a>
        {% endfor %}
      {% endif %}

      <div class="theme-controls" aria-label="Utseende">
        <button id="themeToggle" type="button" class="theme-toggle" aria-pressed="false">
          <span id="themeIcon" aria-hidden="true">
            <span class="theme-icon sun"><i class="fas fa-sun"></i></span>
            <span class="theme-icon moon"><i class="fas fa-moon"></i></span>
          </span>
          <span id="themeLabel" class="sr-only">Ljust l√§ge</span>
        </button>
      </div>
    </div>
  </div>
</header>
